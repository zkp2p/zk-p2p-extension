{
  "manifest_version": 3,
  "name": "Peer: A sidebar that connects off-chain platforms to ZKP2P",
  "version": "0.0.4",
  "description": "Preserve privacy while porting data from various platforms for use in ZKP2P",
  "icons": {
    "16": "icon-16.png",
    "32": "icon-32.png",
    "48": "icon-48.png"
  },
  "action": {
    "default_icon": "icon-32.png",
    "default_title": "Toggle ZKP2P Sidebar"
  },
  "options_page": "options.html", 
  "background": {
    "service_worker": "background.bundle.js"
  },
  "side_panel": {
    "default_path": "sidePanel.html"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self';"
  },
  "content_scripts": [
    {
      "matches": [
        "https://app.revolut.com/*",
        "http://localhost:3000/*",
        "https://staging-testnet.zkp2p.xyz/*",
        "https://staging-app.zkp2p.xyz/*",
        "https://zkp2p.xyz/*"
      ],
      "js": ["contentScript.bundle.js"],
      "css": ["content.styles.css"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "content.styles.css",
        "icon-48.png",
        "icon-32.png"
      ],
      "matches": [
        "https://app.revolut.com/*"
      ]
    }
  ],
  "host_permissions": [
    "https://app.revolut.com/*",
    "http://localhost:3000/*",
    "https://staging-testnet.zkp2p.xyz/*",
    "https://staging-app.zkp2p.xyz/*",
    "https://zkp2p.xyz/*"
  ],
  "permissions": [
    "offscreen",
    "storage",
    "webRequest",
    "activeTab",
    "sidePanel",
    "tabs",
    "scripting"
  ]
}
